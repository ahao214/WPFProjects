<Window
    x:Class="Joker.SmartPacking.Client.Start.Views.LoginView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Joker.SmartPacking.Client.Start.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:prism="http://prismlibrary.com/"
    xmlns:pwdHelper="clr-namespace:Joker.SmartPacking.Client.Common;assembly=Joker.SmartPacking.Client.Common"
    Title="LoginView"
    Width="800"
    Height="450"
    prism:ViewModelLocator.AutoWireViewModel="True"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">
    <Grid>
        <StackPanel>
            <TextBox Height="25" Text="{Binding UserName, UpdateSourceTrigger=PropertyChanged}" />


            <PasswordBox
                Height="25"
                pwdHelper:PasswordHelper.Attach="True"
                pwdHelper:PasswordHelper.Password="{Binding Password, Mode=TwoWay}" />


            <TextBlock Foreground="Red" Text="{Binding ErrorMsg}" />


            <Button
                Width="100"
                Height="30"
                Command="{Binding LoginCommand}"
                Content="登  录" />
        </StackPanel>
    </Grid>
</Window>
